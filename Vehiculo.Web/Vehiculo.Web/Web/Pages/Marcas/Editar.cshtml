@page
@model Web.Pages.Marcas.EditarModel
@{
}
<h1>Editar Marca</h1>

<div class="container">
	<div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto">
		<form method="post">
			<div class="form-group">
				<label class="control-label" asp-for="marcaResponse.Nombre"></label>
				<input class="form-control" asp-for="marcaResponse.Nombre" />
				<span class="text-danger" asp-validation-for="marcaResponse.Nombre"></span>
			</div>

			<div class="text-danger" asp-validation-summary="All"></div>

			<div class="form-group mt-3">
				<a class="btn btn-primary" asp-page="./Index">Regresar</a>
				<input type="submit" value="Editar" class="btn btn-success" />
			</div>

			<input type="hidden" asp-for="marcaResponse.Id" />
		</form>
	</div>
</div>
